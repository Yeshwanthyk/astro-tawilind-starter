---
export async function getStaticPaths() {
  const posts = await Astro.glob("../../data/*.md");
  return posts.map((post) => ({
    params: { slug: post.frontmatter.slug },
    props: { post },
  }));
}

const { Content, frontmatter } = Astro.props.post;
const { slug } = Astro.params;

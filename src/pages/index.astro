---
import BlogPost from "@components/BlogPost.jsx";
import Container from "@layouts/ContainerLayout.astro";

const posts = await Astro.glob("../data/*.md");

const sortedPosts = posts.sort(
  (a, b) =>
    new Date(b.frontmatter.date).getTime() -
    new Date(a.frontmatter.date).getTime()
);
---

<Container>
  <div class="flex flex-col items-start max-w-2xl mx-auto mb-16 mt-4">
    <h3
      class="mt-8 mb-4 text-2xl font-bold tracking-tight text-black md:text-4xl "
    >
      Lastest Posts
    </h3>
    {sortedPosts
      .slice(0, 2)
      .map((post) => (
        <BlogPost
          title={post.frontmatter.title}
          description={post.frontmatter.description}
          slug={post.frontmatter.slug}
        />
      ))}
    <a href="/blog/all/1">{`ğŸ‘‰ see all posts ğŸŒˆ`}</a>
  </div>
</Container>
